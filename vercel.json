{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server-apis/api-*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/og.jsx",
      "use": "@vercel/edge"
    }
  ],
  "routes": [
    {
      "src": "/api/auth",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/bills/installments/upload",
      "dest": "/server-apis/api-bills-simple.js"
    },
    {
      "src": "/api/bills/installments/(.*)/receipt",
      "dest": "/server-apis/api-bills-simple.js"
    },
    {
      "src": "/api/clients",
      "dest": "/server-apis/api-clients.js"
    },
    {
      "src": "/api/dashboard",
      "dest": "/server-apis/api-dashboard.js"
    },
    {
      "src": "/api/quotations",
      "dest": "/server-apis/api-quotations.js"
    },
    {
      "src": "/api/seo-settings",
      "dest": "/api/seo-settings.js"
    },
    {
      "src": "/api/upload",
      "dest": "/server-apis/api-upload.js"
    },
    {
      "src": "/api/notify-mobile",
      "dest": "/server-apis/api/notify-mobile.js"
    },
    {
      "src": "/api/og",
      "dest": "/api/og.jsx"
    },
    {
      "src": "/logo.png",
      "dest": "/logo.png"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap-simple.js"
    },
    {
      "src": "/sitemap-static.xml",
      "dest": "/sitemap-static.xml",
      "headers": {
        "content-type": "application/xml"
      }
    },
    {
      "src": "/test-sitemap.html",
      "dest": "/test-sitemap.html"
    },
    {
      "src": "/sw.js",
      "dest": "/sw.js"
    },
    {
      "src": "/logo_no_bg.png",
      "dest": "/logo_no_bg.png"
    },
    {
      "src": "/image_white_background.png",
      "dest": "/image_white_background.png"
    },
    {
      "src": "/(.*\\.js)",
      "headers": {
        "content-type": "application/javascript",
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.css)",
      "headers": {
        "content-type": "text/css",
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

