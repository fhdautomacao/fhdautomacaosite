{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api-*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "/api-auth-login.js"
    },
    {
      "src": "/api/auth/logout", 
      "dest": "/api-auth-logout.js"
    },
    {
      "src": "/api/test",
      "dest": "/api-test.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

