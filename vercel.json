{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api-*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "/api-auth-login.js"
    },
    {
      "src": "/api/auth/logout", 
      "dest": "/api-auth-logout.js"
    },
    {
      "src": "/api/test",
      "dest": "/api-test.js"
    },
    {
      "src": "/api/bills",
      "dest": "/api-bills.js"
    },
    {
      "src": "/api/quotations",
      "dest": "/api-quotations.js"
    },
    {
      "src": "/api/clients",
      "dest": "/api-clients.js"
    },
    {
      "src": "/api/dashboard",
      "dest": "/api-dashboard.js"
    },
    {
      "src": "/logo.png",
      "dest": "/logo.png"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*\\.js)",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "src": "/(.*\\.css)",
      "headers": {
        "content-type": "text/css"
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

